<h2 style="color: #214177">Formulario de Contacto</h2>

<form asp-controller="Home" asp-action="Contacto">
    <div class="mb-3">
        <label for="nombre" class="form-label">Nombre</label>
        <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Ingresa tu nombre" />
    </div>

    <div class="mb-3">
        <label for="email" class="form-label">eMail</label>
        <input type="email" class="form-control" id="email" name="email" placeholder="ejemplo@ejemplo.com" />
    </div>

    <div class="mb-3">
        <label for="mensaje" class="form-label">Mensaje</label>
        <textarea class="form-control" id="mensaje" name="mensaje" rows="3" placeholder="Deja tu mensaje"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>

</form>
